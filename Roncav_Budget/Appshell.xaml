    <!-- âŒ¨ï¸ Atalhos de Teclado Globais -->
    <Shell.Resources>
        <ResourceDictionary>
            <!-- KeyboardAccelerators para Windows/macOS -->
            <x:Array x:Key="GlobalKeyboardAccelerators" Type="{x:Type KeyboardAccelerator}">
                <!-- CTRL+SHIFT+W - Ajuda RÃ¡pida -->
                <KeyboardAccelerator
                    Key="W"
                    Modifiers="Ctrl,Shift"
                    Invoked="OnHelpAcceleratorInvoked"/>
                
                <!-- CTRL+K - Adicionar Categoria/Pasta -->
                <KeyboardAccelerator
                    Key="K"
                    Modifiers="Ctrl"
                    Invoked="OnAddFolderAcceleratorInvoked"/>
                
                <!-- CTRL+O - Abrir Pasta -->
                <KeyboardAccelerator
                    Key="O"
                    Modifiers="Ctrl"
                    Invoked="OnOpenFolderAcceleratorInvoked"/>
            </x:Array>
        </ResourceDictionary>
    </Shell.Resources>

