<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             xmlns:vm="clr-namespace:Roncav_Budget.ViewModels"
             xmlns:models="clr-namespace:roncav_budget.Models"
             x:Class="Roncav_Budget.Views.DashboardEnhancedPage"
             x:DataType="vm:DashboardEnhancedViewModel"
             Title="Dashboard">

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="20">

                <!-- Cards de Resumo -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                    
                    <!-- Saldo Total -->
                    <Frame Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           BackgroundColor="{StaticResource Primary}"
                           CornerRadius="16"
                           Padding="20">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Saldo Total" 
                                   TextColor="White" 
                                   FontSize="16" 
                                   Opacity="0.9"/>
                            <Label Text="{Binding SaldoTotalFormatado}" 
                                   TextColor="White" 
                                   FontSize="32" 
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding MesAtual}" 
                                   TextColor="White" 
                                   FontSize="14" 
                                   Opacity="0.8"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Receitas -->
                    <Frame Grid.Row="1" Grid.Column="0"
                           BackgroundColor="#34C759"
                           CornerRadius="16"
                           Padding="16">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="ðŸ“¥ Receitas" 
                                   TextColor="White" 
                                   FontSize="14"/>
                            <Label Text="{Binding ReceitasMesFormatado}" 
                                   TextColor="White" 
                                   FontSize="20" 
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Despesas -->
                    <Frame Grid.Row="1" Grid.Column="1"
                           BackgroundColor="#FF3B30"
                           CornerRadius="16"
                           Padding="16">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="ðŸ“¤ Despesas" 
                                   TextColor="White" 
                                   FontSize="14"/>
                            <Label Text="{Binding DespesasMesFormatado}" 
                                   TextColor="White" 
                                   FontSize="20" 
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- GrÃ¡fico: Receitas vs Despesas (Ãšltimos 6 Meses) -->
                <Frame CornerRadius="16" Padding="16" HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="ðŸ“Š Ãšltimos 6 Meses" 
                               FontSize="18" 
                               FontAttributes="Bold"/>
                        
                        <lvc:CartesianChart Series="{Binding ReceitasDespesasSeries}"
                                           XAxes="{Binding XAxes}"
                                           YAxes="{Binding YAxes}"
                                           HeightRequest="250"
                                           TooltipPosition="Top"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- GrÃ¡fico: Gastos por Categoria (Pizza) -->
                <Frame CornerRadius="16" Padding="16" HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="ðŸ• Gastos por Categoria" 
                               FontSize="18" 
                               FontAttributes="Bold"/>
                        
                        <lvc:PieChart Series="{Binding GastosPorCategoriaSeries}"
                                     HeightRequest="250"
                                     InitialRotation="-90"/>
                        
                        <!-- Legenda -->
                        <CollectionView ItemsSource="{Binding GastosPorCategoria}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="vm:CategoryExpense">
                                    <HorizontalStackLayout Spacing="12">
                                        <BoxView Color="{Binding Color}" 
                                                WidthRequest="16" 
                                                HeightRequest="16" 
                                                CornerRadius="4"/>
                                        <Label Text="{Binding CategoryName}" 
                                              FontSize="14" 
                                              VerticalOptions="Center"
                                              HorizontalOptions="Start"/>
                                        <Label Text="{Binding AmountFormatted}" 
                                              FontSize="14" 
                                              FontAttributes="Bold"
                                              VerticalOptions="Center"
                                              HorizontalOptions="End"/>
                                    </HorizontalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- GrÃ¡fico: TendÃªncia de Saldo (Ãšltimos 30 Dias) -->
                <Frame CornerRadius="16" Padding="16" HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="ðŸ“ˆ TendÃªncia de Saldo (30 dias)" 
                               FontSize="18" 
                               FontAttributes="Bold"/>
                        
                        <lvc:CartesianChart Series="{Binding TendenciaSaldoSeries}"
                                           XAxes="{Binding TrendXAxes}"
                                           YAxes="{Binding TrendYAxes}"
                                           HeightRequest="200"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Contas Recentes -->
                <Frame CornerRadius="16" Padding="16" HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ’³ Minhas Contas" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   HorizontalOptions="Start"/>
                            <Label Text="{Binding Contas.Count}" 
                                   FontSize="14"
                                   TextColor="{StaticResource Primary}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <CollectionView ItemsSource="{Binding Contas}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Conta">
                                    <Frame Padding="12" CornerRadius="12" BackgroundColor="#F9F9F9">
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                            <Label Grid.Column="0" 
                                                  Text="{Binding TipoIcone}" 
                                                  FontSize="24"
                                                  VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                                <Label Text="{Binding Nome}" 
                                                      FontSize="16" 
                                                      FontAttributes="Bold"/>
                                                <Label Text="{Binding TipoConta}" 
                                                      FontSize="12" 
                                                      TextColor="Gray"/>
                                            </VerticalStackLayout>
                                            <Label Grid.Column="2" 
                                                  Text="{Binding SaldoFormatado}" 
                                                  FontSize="18" 
                                                  FontAttributes="Bold"
                                                  TextColor="{StaticResource Primary}"
                                                  VerticalOptions="Center"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                  IsVisible="{Binding IsLoading}"
                                  Color="{StaticResource Primary}"
                                  HeightRequest="50"/>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
